{
  "name": "open-review",
  "displayName": "Open Review",
  "description": "A unified review workflow for managing human-generated comments and AI responses",
  "version": "0.0.3",
  "publisher": "openreview",
  "icon": "asserts/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openReview",
          "title": "Open Review",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "openReview": [
        {
          "id": "openReview.webviewView",
          "name": "Open Review",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "openReview.createNote",
        "title": "Create Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.replyNote",
        "title": "Reply Note",
        "category": "Open Review"
      },
      {
        "command": "openReview.startDraft",
        "title": "Start Draft",
        "category": "Open Review"
      },
      {
        "command": "openReview.finishDraft",
        "title": "Finish Draft",
        "category": "Open Review"
      },
      {
        "command": "openReview.deleteNoteComment",
        "title": "Delete Note Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.deleteNote",
        "title": "Delete Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.cancelsaveNote",
        "title": "Cancel Save Note",
        "category": "Open Review"
      },
      {
        "command": "openReview.saveNote",
        "title": "Save Note",
        "category": "Open Review"
      },
      {
        "command": "openReview.editNote",
        "title": "Edit Note",
        "category": "Open Review"
      },
      {
        "command": "openReview.dispose",
        "title": "Dispose Note",
        "category": "Open Review"
      },
      {
        "command": "openReview.exportAllThread",
        "title": "Export Comments",
        "category": "Open Review",
        "icon": {
          "light": "asserts/export.icon.dark.svg",
          "dark": "asserts/export.icon.light.svg"
        }
      }
    ],
    "menus": {
			"commandPalette": [
				{
					"command": "openReview.createNote",
					"when": "false"
				},
				{
					"command": "openReview.replyNote",
					"when": "false"
				},
				{
					"command": "openReview.deleteNote",
					"when": "false"
				},
				{
					"command": "openReview.deleteNoteComment",
					"when": "false"
				}
			],
			"comments/commentThread/title": [
				{
					"command": "openReview.deleteNote",
					"group": "navigation",
					"when": "commentController == comment-sample && !commentThreadIsEmpty"
				}
			],
			"comments/commentThread/context": [
				{
					"command": "openReview.createNote",
					"group": "inline",
					"when": "commentController == comment-sample && commentThreadIsEmpty"
				},
				{
					"command": "openReview.replyNote",
					"group": "inline",
					"when": "commentController == comment-sample && !commentThreadIsEmpty"
				},
				{
					"command": "openReview.startDraft",
					"group": "inline",
					"when": "commentController == comment-sample && commentThreadIsEmpty"
				},
				{
					"command": "openReview.finishDraft",
					"group": "inline",
					"when": "commentController == comment-sample && commentThread == draft"
				}
			],
			"comments/comment/title": [
				{
					"command": "openReview.editNote",
					"group": "group@1",
					"when": "commentController == comment-sample"
				},
				{
					"command": "openReview.deleteNoteComment",
					"group": "group@2",
					"when": "commentController == comment-sample && comment == canDelete"
				}
			],
			"comments/comment/context": [
				{
					"command": "openReview.cancelsaveNote",
					"group": "inline@1",
					"when": "commentController == comment-sample"
				},
				{
					"command": "openReview.saveNote",
					"group": "inline@2",
					"when": "commentController == comment-sample"
				}
			],
      "editor/title": [
        {
          "command": "openReview.exportAllThread",
          "group": "navigation@100"
        }
      ]
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "publish": "vsce publish",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "vite build --config src/webview/vite.config.ts",
    "dev:webview": "vite --config src/webview/vite.config.ts",
    "dev:webview:check": "vite --config src/webview/vite.config.ts & tsc --noEmit --watch --project src/webview/tsconfig.json",
    "type-check:webview": "tsc --noEmit --project src/webview/tsconfig.json",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts,tsx",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "mocha": "^10.2.0",
    "glob": "^8.0.3",
    "vite": "^4.4.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "repository": "https://github.com/yuhang-dong/open-review",
  "license": "MIT"
}