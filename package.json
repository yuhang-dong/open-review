{
  "name": "open-review",
  "displayName": "Open Review",
  "description": "A unified review workflow for managing human-generated comments and AI responses",
  "version": "0.0.5",
  "publisher": "openreview",
  "icon": "asserts/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openReview",
          "title": "Open Review",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "openReview": [
        {
          "id": "openReview.webviewView",
          "name": "Open Review",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "openReview.createComment",
        "title": "Create Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.replyComment",
        "title": "Reply Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.startDraft",
        "title": "Start Draft",
        "category": "Open Review"
      },
      {
        "command": "openReview.finishDraft",
        "title": "Finish Draft",
        "category": "Open Review"
      },
      {
        "command": "openReview.deleteComment",
        "title": "Delete Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.deleteThread",
        "title": "Delete Thread",
        "category": "Open Review"
      },
      {
        "command": "openReview.cancelSaveComment",
        "title": "Cancel Save Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.saveComment",
        "title": "Save Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.editComment",
        "title": "Edit Comment",
        "category": "Open Review"
      },
      {
        "command": "openReview.disposeComments",
        "title": "Dispose Comments",
        "category": "Open Review"
      },
      {
        "command": "openReview.exportAllThread",
        "title": "Export Comments",
        "category": "Open Review",
        "icon": {
          "light": "asserts/export.icon.dark.svg",
          "dark": "asserts/export.icon.light.svg"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "openReview.createComment",
          "when": "false"
        },
        {
          "command": "openReview.replyComment",
          "when": "false"
        },
        {
          "command": "openReview.deleteThread",
          "when": "false"
        },
        {
          "command": "openReview.deleteComment",
          "when": "false"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "openReview.deleteThread",
          "group": "navigation",
          "when": "commentController == comment-sample && !commentThreadIsEmpty"
        }
      ],
      "comments/commentThread/context": [
        {
          "command": "openReview.createComment",
          "group": "inline",
          "when": "commentController == comment-sample && commentThreadIsEmpty"
        },
        {
          "command": "openReview.replyComment",
          "group": "inline",
          "when": "commentController == comment-sample && !commentThreadIsEmpty"
        },
        {
          "command": "openReview.startDraft",
          "group": "inline",
          "when": "commentController == comment-sample && commentThreadIsEmpty"
        },
        {
          "command": "openReview.finishDraft",
          "group": "inline",
          "when": "commentController == comment-sample && commentThread == draft"
        }
      ],
      "comments/comment/title": [
        {
          "command": "openReview.editComment",
          "group": "group@1",
          "when": "commentController == comment-sample"
        },
        {
          "command": "openReview.deleteComment",
          "group": "group@2",
          "when": "commentController == comment-sample && comment == canDelete"
        }
      ],
      "comments/comment/context": [
        {
          "command": "openReview.cancelSaveComment",
          "group": "inline@1",
          "when": "commentController == comment-sample"
        },
        {
          "command": "openReview.saveComment",
          "group": "inline@2",
          "when": "commentController == comment-sample"
        }
      ],
      "editor/title": [
        {
          "command": "openReview.exportAllThread",
          "group": "navigation@100"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:all",
    "publish": "npm run package && vsce publish",
    "compile": "tsc -p ./",
    "compile:prod": "tsc -p ./ --removeComments",
    "watch": "tsc -watch -p ./",
    "build:webview": "vite build --config src/webview/vite.config.ts",
    "build:webview:prod": "NODE_ENV=production vite build --config src/webview/vite.config.ts --mode production",
    "dev:webview": "vite --config src/webview/vite.config.ts",
    "dev:webview:check": "vite --config src/webview/vite.config.ts & tsc --noEmit --watch --project src/webview/tsconfig.json",
    "type-check": "tsc --noEmit",
    "type-check:webview": "tsc --noEmit --project src/webview/tsconfig.json",
    "type-check:all": "npm run type-check && npm run type-check:webview",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts,tsx",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "clean": "rimraf out",
    "build:all": "npm run clean && npm run compile:prod && npm run build:webview:prod",
    "prebuild:all": "npm run type-check:all"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "fast-check": "^3.13.2",
    "glob": "^8.0.3",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.0",
    "typescript": "^4.9.4",
    "vite": "^4.4.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "repository": "https://github.com/yuhang-dong/open-review",
  "license": "MIT"
}
